<section>
    <div class="container mt-4">
        <div class="row">
            <div class="col-md-6">
                <h2 class="text-center">Edit User</h2>
                <form id="signup-form" action="/admin/edit-user/{{selectUser._id}}" method="Post" enctype="application/x-www-form-urlencoded">
                    <label for="first_name">First Name</label>
                    <input type="text" name="first_name" class="form-control" value="{{selectUser.first_name}}">
                    <br>
                    <label for="last_name">Last Name</label>
                    <input type="text" name="last_name" class="form-control" value="{{selectUser.last_name}}">
                    <br>
                    <label for="email">Email Address</label>
                    <input type="text" name="email" class="form-control" value="{{selectUser.email}}">
                    <br>
                    <button type="submit" class="btn btn-success mt-4">Submit</button>
                </form>
            </div>
        </div>
    </div>
</section>